<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.taskmanager.AuthController"
            prefWidth="400" prefHeight="300">

    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="40" prefWidth="300">
            <children>
                <Label text="Task Manager Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <TextField fx:id="loginUsername" promptText="Username" prefWidth="250"/>
                <PasswordField fx:id="loginPassword" promptText="Password" prefWidth="250"/>

                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button text="Login" onAction="#handleLogin" prefWidth="100"/>
                        <Button text="Register" onAction="#showRegisterView" prefWidth="100"/>
                    </children>
                </HBox>

                <Label textFill="red" fx:id="errorLabel"/>
            </children>

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
